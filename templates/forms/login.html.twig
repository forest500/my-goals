{% extends 'base_form.html.twig' %}
{% block title %}Logowanie{% endblock %}
{% block body %}
    <a href="{{ path('registration') }}">Zarejestruj się!</a>
	{% if error %}
		<div>{{ error.messageKey|trans() }}</div>
	{% endif %}
	<div class="loginForm w-50">
		{{ form_start(form, { 'attr' : { 'class' : 'form-group' }}) }}
		{{ form_row(form.email, { 'attr' : { 'class' : 'form-control' }}) }}
		{{ form_row(form.password, { 'attr' : { 'class' : 'form-control' }}) }}
		<button type="submit" id="submit" class="btn btn-success mt-3">Zaloguj się</button>
		<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
		{{ form_end(form) }}
	</div>
{% endblock %}
