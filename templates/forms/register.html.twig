{% extends 'base_form.html.twig' %}
{% block title %}Rejestracja{% endblock %}
{% block body %}
    <a href="{{ path('login') }}">Masz już konto? Zaloguj się!</a>
    <div class="registerForm w-50">
        {{ form_start(form, { 'attr' : { 'class' : 'form-group' }}) }}
        {{ form_row(form.email, { 'attr' : { 'class' : 'form-control' }}) }}
        {{ form_row(form.plainPassword.first, { 'attr' : { 'class' : 'form-control' }}) }}
        {{ form_row(form.plainPassword.second, { 'attr' : { 'class' : 'form-control' }}) }}
        {{ form_row(form.termsAccepted, { 'attr' : { 'class' : 'form-check-input ml-2' }}) }}
        {% for message in app.flashes('error') %}
            <div class="flash-error">
                {{ message }}
            </div>
        {% endfor %}
        <button class="btn btn-success"type="submit">Zarejestruj się!</button>
        {{ form_end(form) }}
    </div>
{% endblock %}
